<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="12dp"
    android:background="@drawable/bg_widget">

    <!-- Logo top-left -->
    <ImageView
        android:id="@+id/ivLogo"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:contentDescription="Logo"
        android:src="@mipmap/icon_inventory"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- Inventory label under logo -->
    <TextView
        android:id="@+id/tvInventory"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Inventory"
        android:textColor="@color/naranja"
        android:textStyle="bold"
        android:textSize="14sp"
        app:layout_constraintTop_toBottomOf="@id/ivLogo"
        app:layout_constraintStart_toStartOf="@id/ivLogo"
        android:layout_marginTop="4dp" />

    <!-- Question top-right -->
    <TextView
        android:id="@+id/tvQuestion"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="¿Cuánto tengo de inventario?"
        android:textColor="@color/white"
        android:textSize="14sp"
        android:gravity="end"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/ivLogo"
        android:layout_marginStart="8dp" />

    <!-- Balance (masked by default) -->
    <TextView
        android:id="@+id/tvBalance"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="$****"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:textStyle="bold"
        android:maxLines="1"
        android:ellipsize="end"
        app:layout_constraintTop_toBottomOf="@id/tvQuestion"
        app:layout_constraintStart_toStartOf="@id/tvQuestion"
        app:layout_constraintEnd_toStartOf="@id/ivEye"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp" />

    <!-- Eye icon to toggle visibility -->
    <ImageView
        android:id="@+id/ivEye"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:contentDescription="Mostrar/Ocultar saldo"
        android:src="@drawable/ic_eye_open"
        android:tint="@color/white"
        app:layout_constraintTop_toBottomOf="@id/tvQuestion"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp" />

    <!-- Manage inventory text bottom-right -->
    <TextView
        android:id="@+id/tvManage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Gestionar inventario"
        android:textColor="@color/white"
        android:textSize="14sp"
        app:layout_constraintEnd_toStartOf="@id/ivManage"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp" />

    <!-- Orange manage icon -->
    <ImageView
        android:id="@+id/ivManage"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:contentDescription="Gestionar inventario"
        android:src="@drawable/ic_manage_orange"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp" />

</androidx.constraintlayout.widget.ConstraintLayout>