<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/greyBackgorund"
        tools:context=".ui.login.LoginFragment">

        <!-- ðŸ”¸ AnimaciÃ³n del logo INVENTORY -->
        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/lottieInventory"
            android:layout_width="300dp"
            android:layout_height="300dp"
            app:lottie_rawRes="@raw/inventory"
            app:lottie_autoPlay="true"
            app:lottie_loop="true"
            app:lottie_speed="1"
            android:layout_marginTop="40dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:translationY="75dp"
            />


        <!-- ðŸ”¸ TÃ­tulo INVENTORY -->
        <TextView
            android:id="@+id/tvTitleLogin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/title_login"
            android:textSize="62sp"
            android:textColor="@color/orange"
            android:fontFamily="@font/fredoka_semibold"
            app:layout_constraintTop_toBottomOf="@id/lottieInventory"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
             />

        <!-- ðŸ”¸ AnimaciÃ³n de huella dactilar -->
        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/lottieFingerprint"
            android:layout_width="300dp"
            android:layout_height="300dp"
            app:lottie_rawRes="@raw/fingerprint_biometric_scan"
            app:lottie_autoPlay="true"
            app:lottie_loop="true"
            app:lottie_speed="1"
            app:layout_constraintTop_toBottomOf="@id/tvTitleLogin"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="40dp" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
